<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_26sdp"
    android:paddingBottom="@dimen/_10sdp">

    <TextView
        android:id="@+id/item_pickup_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 May 2019, 09:00 AM"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/robotoregular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_pickup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID8983372"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/helvetica"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/item_pickup_date"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_pickup_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kertas. Dupleks; Kertas Buku"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/robotoregular"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@id/item_pickup_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_pickup_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open 24 Hours"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/robotoregular"
        android:layout_marginTop="@dimen/_16sdp"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/item_pickup_address"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/item_pickup_distance_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pickup_location"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@id/item_pickup_time"
        app:layout_constraintBottom_toBottomOf="@id/item_pickup_time"
        app:layout_constraintStart_toEndOf="@id/item_pickup_time"/>

    <TextView
        android:id="@+id/item_pickup_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 M"
        android:textSize="@dimen/_8ssp"
        android:fontFamily="@font/helvetica"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@id/item_pickup_time"
        app:layout_constraintStart_toEndOf="@id/item_pickup_distance_icon" />

    <TextView
        android:id="@+id/item_pickup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ Nama Nasabah]"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/robotoregular"
        android:layout_marginTop="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/item_pickup_time"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_pickup_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sedang_diproses"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/robotoregular"
        android:background="@drawable/bg_status"
        android:paddingStart="@dimen/_6sdp"
        android:paddingEnd="@dimen/_6sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="@id/item_pickup_name"
        app:layout_constraintBottom_toBottomOf="@id/item_pickup_name"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>